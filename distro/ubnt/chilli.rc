#!/bin/sh

getcfg() { echo $(grep "$1=" /tmp/system.cfg|sed "s/$1=//"); }

if [ "$(getcfg hotspot.status)" = "enabled" ]; then
    if [ "$(getcfg hotspot.onboot)" = "enabled" ]; then
	script=/tmp/run.$$
	echo "sleep 30; /usr/etc/init.d/chilli start; rm -f $script" > $script
	bkgexec $script
    fi
fi
